<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dataCountry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8EB"
    tools:context=".view.DataCountry">

    <TextView
        android:id="@+id/textViewContentName"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"
        android:hint="Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textViewNameCountry"
        app:layout_constraintTop_toTopOf="@+id/textViewNameCountry" />

    <TextView
        android:id="@+id/textViewContentBorders"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:hint="Borders"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewContentPopulation"
        app:layout_constraintTop_toTopOf="@+id/textViewBorder" />

    <TextView
        android:id="@+id/textViewContentPopulation"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:hint="Population"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewContentArea"
        app:layout_constraintTop_toTopOf="@+id/textViewPopulation" />

    <TextView
        android:id="@+id/textViewContentArea"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:hint="Area"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewContentSubregion"
        app:layout_constraintTop_toTopOf="@+id/textViewArea" />

    <TextView
        android:id="@+id/textViewContentSubregion"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:hint="Subregion"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewContentRegion"
        app:layout_constraintTop_toTopOf="@+id/textViewSubRegion" />

    <TextView
        android:id="@+id/textViewContentRegion"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:hint="Region"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewContentOfficial"
        app:layout_constraintTop_toTopOf="@+id/textViewRegion" />

    <TextView
        android:id="@+id/textViewContentOfficial"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:hint="Official name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewContentName"
        app:layout_constraintTop_toTopOf="@+id/textViewOfficialName" />

    <TextView
        android:id="@+id/textViewBorder"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:text="Borders:"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewPopulation"
        app:layout_constraintTop_toBottomOf="@+id/textViewPopulation" />

    <TextView
        android:id="@+id/textViewPopulation"
        android:layout_width="112dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:text="Population:"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewArea"
        app:layout_constraintTop_toBottomOf="@+id/textViewArea" />

    <TextView
        android:id="@+id/textViewSubRegion"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:text="Sub Region:"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewRegion"
        app:layout_constraintTop_toBottomOf="@+id/textViewRegion" />

    <TextView
        android:id="@+id/textViewArea"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:text="Area:"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewSubRegion"
        app:layout_constraintTop_toBottomOf="@+id/textViewSubRegion" />

    <TextView
        android:id="@+id/textViewOfficialName"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:text="Official name:"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewNameCountry"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameCountry" />

    <TextView
        android:id="@+id/textViewRegion"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:text="Region:"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewOfficialName"
        app:layout_constraintTop_toBottomOf="@+id/textViewOfficialName" />

    <ImageView
        android:id="@+id/imageViewFlagCountry"
        android:layout_width="346dp"
        android:layout_height="183dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewNameCountry"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:text="Name:"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/imageViewFlagCountry"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFlagCountry" />

</androidx.constraintlayout.widget.ConstraintLayout>